---
import "@fontsource-variable/inter";
import "tailwindcss/tailwind.css";
import "@/styles/index.css";

import PageFooter from "@/components/page-footer.astro";
import PageHeader from "@/components/page-header.astro";
import DocumentLayout from "@/layouts/document-layout.astro";

interface Props {
	description?: string;
	robots?: string;
	title: string;
}

const { description, robots, title } = Astro.props;
---

<DocumentLayout description={description} robots={robots} title={title}>
	<div class="grid min-h-full grid-rows-[auto_1fr_auto] bg-[#f1f1f1]">
		<PageHeader />
		<slot />
		<PageFooter />
	</div>
</DocumentLayout>
