---
import "@fontsource/press-start-2p";
import "tailwindcss/tailwind.css";
import "@/styles/index.css";

import DocumentLayout from "@/layouts/document-layout.astro";

interface Props {
	description?: string;
	robots?: string;
	title: string;
}

const { description, robots, title } = Astro.props;
---

<DocumentLayout description={description} robots={robots} title={title}>
	<div class="container mx-auto grid w-full gap-y-8">
		<slot />
	</div>
</DocumentLayout>
