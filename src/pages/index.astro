---
import { getCollection } from "astro:content";

import MainContent from "@/components/main-content.astro";
import SoftwarePreviewCard from "@/components/software-preview-card.astro";
import PageLayout from "@/layouts/page.astro";

const allSoftware = await getCollection("software");
---

<PageLayout title="Home">
	<MainContent
		class="mx-auto grid w-full max-w-7xl gap-y-6 border-t-5 border-t-brand-950 bg-neutral-50 pb-8"
	>
		<div class="mx-auto grid gap-y-6 bg-gradient-to-br from-neutral-600 to-neutral-800 px-16 py-10">
			<h1 class="text-2xl font-medium text-white">Software Dashboard</h1>
			<p class="text-neutral-200">
				Over the years, the <a
					class="underline decoration-dotted transition hover:text-white"
					href="https://www.oeaw.ac.at/acdh/research-units/dh-researchinfrastructure"
					>DH Research&Infrastructure</a
				> team has developed hundreds of specialized applications. Some of these applications are now
				established as so-called "core services", being used in numerous projects.
			</p>
		</div>
		<ul class="m-auto grid grid-cols-[repeat(auto-fill,minmax(270px,1fr))] gap-8 p-0 px-16">
			{
				allSoftware.map((software) => {
					return (
						<li>
							<SoftwarePreviewCard software={software} />
						</li>
					);
				})
			}
		</ul>
	</MainContent>
</PageLayout>
