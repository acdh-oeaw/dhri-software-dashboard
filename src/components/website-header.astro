---
import { Image } from "astro:assets";

import { createI18n } from "@/lib/i18n";
import Link from "@/components/link.astro";
import logoLight from "~/public/assets/images/acdh-ch-logo-light.svg";

const { t } = await createI18n();
---

<header class="border-b border-neutral-200">
	<div class="container flex items-center py-4 justify-between gap-x-8">
		<Link class="shrink-0" href="/">
			<Image alt="" class="h-6 w-auto block" decoding="auto" fetchpriority="high" src={logoLight} />
			<span class="sr-only">{t("WebsiteHeader.links.home")}</span>
		</Link>
	</div>
</header>
